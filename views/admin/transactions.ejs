<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>All Transactions | Admin</title>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.6.3/css/all.css" integrity="sha384-UHRtZLI+pbxtHCWp1t77Bi1L4ZtiqrqD80Kn4Z8NTSRyMA2Fd33n5dQ8lWUE00s/" crossorigin="anonymous" />
    <link rel="stylesheet" href="/styles/main.css" />
  </head>
  <body>
    <%- include('../partials/header') %>

    <div class="dashboard-container">
      <div class="dashboard-header">
        <div>
          <h1><i class="fas fa-list"></i> All Transactions</h1>
          <p style="color: var(--text-muted); margin-top: 0.5rem;">View and manage all user transactions</p>
        </div>
        <div class="dashboard-actions">
          <a href="/admin" class="btn btn-secondary" style="background: var(--dark-card); color: var(--text-secondary); border: 1px solid var(--dark-border);">
            <i class="fas fa-arrow-left"></i> Back to Admin
          </a>
        </div>
      </div>

      <!-- Filters and Search -->
      <div class="transactions-section" style="margin-bottom: 1.5rem;">
        <form method="GET" action="/admin/transactions" style="display: grid; grid-template-columns: 2fr 1fr auto auto; gap: 1rem; align-items: end;">
          <div>
            <label style="display: block; margin-bottom: 0.5rem; color: var(--text-secondary); font-size: 0.875rem;">Search</label>
            <input 
              type="text" 
              name="search" 
              class="form-control" 
              placeholder="Search by description, user, transfer to..." 
              value="<%= search %>"
            />
          </div>
          <div>
            <label style="display: block; margin-bottom: 0.5rem; color: var(--text-secondary); font-size: 0.875rem;">Type</label>
            <select name="type" class="form-control">
              <option value="">All Types</option>
              <option value="income" <%= typeFilter === 'income' ? 'selected' : '' %>>Income</option>
              <option value="expense" <%= typeFilter === 'expense' ? 'selected' : '' %>>Expense</option>
              <option value="receivable" <%= typeFilter === 'receivable' ? 'selected' : '' %>>Receivable</option>
              <option value="payable" <%= typeFilter === 'payable' ? 'selected' : '' %>>Payable</option>
            </select>
          </div>
          <button type="submit" class="btn btn-primary">
            <i class="fas fa-search"></i> Filter
          </button>
          <% if (search || typeFilter) { %>
            <a href="/admin/transactions" class="btn btn-secondary" style="background: var(--dark-card); color: var(--text-secondary); border: 1px solid var(--dark-border);">
              <i class="fas fa-times"></i> Clear
            </a>
          <% } %>
        </form>
      </div>

      <!-- Summary Stats -->
      <div class="stats-grid" style="margin-bottom: 1.5rem;">
        <div class="stat-card">
          <div class="stat-header">
            <span class="stat-label">Total Transactions</span>
            <div class="stat-icon" style="background: rgba(59, 130, 246, 0.2); color: var(--info-color);">
              <i class="fas fa-list"></i>
            </div>
          </div>
          <div class="stat-value"><%= totals.count || 0 %></div>
        </div>
        <div class="stat-card">
          <div class="stat-header">
            <span class="stat-label">Total Amount</span>
            <div class="stat-icon" style="background: rgba(139, 92, 246, 0.2); color: #8b5cf6;">
              <i class="fas fa-rupee-sign"></i>
            </div>
          </div>
          <div class="stat-value">₹<%= parseFloat(totals.total_amount || 0).toFixed(2) %></div>
        </div>
        <div class="stat-card">
          <div class="stat-header">
            <span class="stat-label">Total Income</span>
            <div class="stat-icon income">
              <i class="fas fa-arrow-down"></i>
            </div>
          </div>
          <div class="stat-value amount-positive">₹<%= parseFloat(totals.total_income || 0).toFixed(2) %></div>
        </div>
        <div class="stat-card">
          <div class="stat-header">
            <span class="stat-label">Total Expense</span>
            <div class="stat-icon expense">
              <i class="fas fa-arrow-up"></i>
            </div>
          </div>
          <div class="stat-value amount-negative">₹<%= parseFloat(totals.total_expense || 0).toFixed(2) %></div>
        </div>
      </div>

      <!-- Transactions Table -->
      <div class="transactions-section">
        <div class="section-header">
          <h2><i class="fas fa-exchange-alt"></i> Transactions (<%= totalTransactions %>)</h2>
        </div>

        <% if (transactions && transactions.length > 0) { %>
          <div style="overflow-x: auto;">
            <table class="transactions-table">
              <thead>
                <tr>
                  <th>ID</th>
                  <th>Date</th>
                  <th>User</th>
                  <th>Description</th>
                  <th>Transfer To</th>
                  <th>Type</th>
                  <th>Amount</th>
                  <th>Actions</th>
                </tr>
              </thead>
              <tbody>
                <% transactions.forEach(transaction => { %>
                  <tr>
                    <td><%= transaction.id %></td>
                    <td>
                      <%= new Date(transaction.created_at).toLocaleDateString('en-US', { 
                        year: 'numeric', 
                        month: 'short', 
                        day: 'numeric',
                        hour: '2-digit',
                        minute: '2-digit'
                      }) %>
                    </td>
                    <td>
                      <strong><%= transaction.user_name || transaction.user_email %></strong>
                      <br>
                      <small style="color: var(--text-muted);"><%= transaction.user_email %></small>
                    </td>
                    <td><strong><%= transaction.description %></strong></td>
                    <td><%= transaction.transfer_to || 'N/A' %></td>
                    <td>
                      <span class="type-badge <%= transaction.type %>">
                        <%= transaction.type %>
                      </span>
                    </td>
                    <td class="<%= transaction.type === 'income' || transaction.type === 'receivable' ? 'amount-positive' : 'amount-negative' %>">
                      <%= transaction.type === 'income' || transaction.type === 'receivable' ? '+' : '-' %>₹<%= parseFloat(transaction.amount_rs).toFixed(2) %>
                    </td>
                    <td>
                      <button 
                        onclick="deleteTransaction(<%= transaction.id %>)" 
                        class="btn btn-danger"
                        style="padding: 0.5rem 1rem; font-size: 0.875rem;"
                      >
                        <i class="fas fa-trash"></i> Delete
                      </button>
                    </td>
                  </tr>
                <% }); %>
              </tbody>
            </table>
          </div>

          <!-- Pagination -->
          <% if (totalPages > 1) { %>
            <div style="display: flex; justify-content: center; align-items: center; gap: 1rem; margin-top: 2rem; padding-top: 2rem; border-top: 1px solid var(--dark-border);">
              <% if (currentPage > 1) { %>
                <a href="/admin/transactions?page=<%= currentPage - 1 %><%= search ? '&search=' + encodeURIComponent(search) : '' %><%= typeFilter ? '&type=' + typeFilter : '' %>" class="btn btn-secondary" style="background: var(--dark-card); color: var(--text-secondary); border: 1px solid var(--dark-border);">
                  <i class="fas fa-chevron-left"></i> Previous
                </a>
              <% } %>
              
              <span style="color: var(--text-secondary);">
                Page <%= currentPage %> of <%= totalPages %>
              </span>
              
              <% if (currentPage < totalPages) { %>
                <a href="/admin/transactions?page=<%= currentPage + 1 %><%= search ? '&search=' + encodeURIComponent(search) : '' %><%= typeFilter ? '&type=' + typeFilter : '' %>" class="btn btn-secondary" style="background: var(--dark-card); color: var(--text-secondary); border: 1px solid var(--dark-border);">
                  Next <i class="fas fa-chevron-right"></i>
                </a>
              <% } %>
            </div>
          <% } %>
        <% } else { %>
          <div class="empty-state">
            <i class="fas fa-inbox"></i>
            <p>No transactions found</p>
          </div>
        <% } %>
      </div>
    </div>

    <script>
      async function deleteTransaction(transactionId) {
        if (!confirm('Are you sure you want to delete this transaction? This action cannot be undone!')) {
          return;
        }

        try {
          const response = await fetch(`/admin/transactions/delete/${transactionId}`, {
            method: 'POST',
            headers: {
              'Content-Type': 'application/json'
            }
          });

          const data = await response.json();

          if (data.success) {
            alert('Transaction deleted successfully!');
            location.reload();
          } else {
            alert(data.error || 'Error deleting transaction');
          }
        } catch (error) {
          console.error('Error:', error);
          alert('Error deleting transaction. Please try again.');
        }
      }
    </script>

    <%- include('../partials/footer') %>
  </body>
</html>

