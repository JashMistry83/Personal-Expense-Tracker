<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Add Expense | Expense Tracker</title>
    <link
      href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;600;700&display=swap"
      rel="stylesheet"
    />
    <link
      rel="stylesheet"
      href="https://use.fontawesome.com/releases/v5.6.3/css/all.css"
      integrity="sha384-UHRtZLI+pbxtHCWp1t77Bi1L4ZtiqrqD80Kn4Z8NTSRyMA2Fd33n5dQ8lWUE00s/"
      crossorigin="anonymous"
    />
    <link rel="stylesheet" href="/styles/main.css" />
  </head>
  <body>
    <%- include('partials/header') %>

    <div class="form-container">
      <div class="form-card">
        <h1><i class="fas fa-plus-circle"></i> Add New Transaction</h1>
        <p class="form-subtitle">Track your income, expenses, and transfers</p>

        <form action="/add-expense" method="POST">
          <div class="form-group">
            <label for="type">Transaction Type</label>
            <div class="type-selector">
              <div class="type-option">
                <input
                  type="radio"
                  id="type-income"
                  name="type"
                  value="income"
                  required
                />
                <label for="type-income">Income</label>
              </div>
              <div class="type-option">
                <input
                  type="radio"
                  id="type-expense"
                  name="type"
                  value="expense"
                  required
                />
                <label for="type-expense">Expense</label>
              </div>
              <div class="type-option">
                <input
                  type="radio"
                  id="type-receivable"
                  name="type"
                  value="receivable"
                  required
                />
                <label for="type-receivable">Receivable</label>
              </div>
              <div class="type-option">
                <input
                  type="radio"
                  id="type-payable"
                  name="type"
                  value="payable"
                  required
                />
                <label for="type-payable">Payable</label>
              </div>
            </div>
          </div>

          <div class="form-group">
            <label for="expenseDate">Date of Transaction</label>
            <input
              type="date"
              id="expenseDate"
              name="expenseDate"
              class="form-control"
              required
            />
          </div>

          <div class="form-group">
            <label for="description">Description</label>
            <input
              type="text"
              id="description"
              name="description"
              class="form-control"
              placeholder="e.g., Coffee, Groceries, Rent, Salary"
              required
            />
          </div>

          <div class="form-group">
            <label for="transfer_to">Transfer To/From (Name)</label>
            <input
              type="text"
              id="transfer_to"
              name="transfer_to"
              class="form-control"
              placeholder="e.g., John Doe, Company Name, Bank"
              required
            />
          </div>

          <div class="form-group">
            <label for="amount">Amount (â‚¹)</label>
            <input
              type="number"
              id="amount"
              name="amount"
              class="form-control"
              step="0.01"
              min="0.01"
              placeholder="e.g., 45.50"
              required
            />
          </div>

          <div class="form-group">
            <label for="amount">Is it a health related expense?</label>
            <input
              type="checkbox"
              id="health_related"
              name="health_related"
              class="form-control"
              step="0.01"
              min="0.01"
              required
            />
          </div>

          <div style="display: flex; gap: 1rem; margin-top: 2rem">
            <button type="submit" class="btn btn-success btn-block">
              <i class="fas fa-check"></i> Add Transaction
            </button>
            <a
              href="/expense"
              class="btn btn-secondary btn-block"
              style="
                background: var(--dark-card);
                color: var(--text-secondary);
                border: 1px solid var(--dark-border);
              "
            >
              <i class="fas fa-times"></i> Cancel
            </a>
          </div>
        </form>
      </div>
    </div>

    <%- include('partials/footer') %>

    <script>
      let input_expense = document.getElementById("type-expense");
      input_expense.addEventListener("focus", () => {
        document.getElementById("health_related").style.display = "block";
      });
    </script>
  </body>
</html>
