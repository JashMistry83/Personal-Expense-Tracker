<%- include('partials/header') %>

<div class="auth-container mt-5">
  <div class="auth-card shadow-lg">
    <h2 class="auth-title mb-4">Login</h2>

    <form action="/login" method="POST">
      <div class="form-group">
        <label>Email</label>
        <input type="email" class="form-control custom-input" name="username">
      </div>
      <div class="form-group">
        <label>Password</label>
        <input type="password" class="form-control custom-input" name="password">
      </div>
      <button type="submit" class="btn btn-primary btn-auth">Login</button>
    </form>

    <hr>

    <a class="btn btn-google btn-block mt-3" href="/auth/google">
      <i class="fab fa-google mr-2"></i>Sign in with Google
    </a>
  </div>
</div>

<%- include('partials/footer') %>
