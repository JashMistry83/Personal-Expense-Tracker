<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Dashboard | Expense Tracker</title>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.6.3/css/all.css" integrity="sha384-UHRtZLI+pbxtHCWp1t77Bi1L4ZtiqrqD80Kn4Z8NTSRyMA2Fd33n5dQ8lWUE00s/" crossorigin="anonymous" />
    <link rel="stylesheet" href="/styles/main.css" />
  </head>
  <body>
    <%- include('partials/header') %>

    <div class="dashboard-container">
      <div class="dashboard-header">
        <div>
          <h1>Welcome, <%= user.displayName || user.name || user.gmail %> ðŸ‘‹</h1>
          <p style="color: var(--text-muted); margin-top: 0.5rem;">Track and manage your expenses efficiently</p>
        </div>
        <div class="dashboard-actions">
          <button onclick="openAddModal()" class="btn btn-success">
            <i class="fas fa-plus"></i> Quick Add
          </button>
          <a href="/add-expense" class="btn btn-primary">
            <i class="fas fa-file-alt"></i> Add Transaction
          </a>
          <a href="/logout" class="btn btn-danger">
            <i class="fas fa-sign-out-alt"></i> Logout
          </a>
        </div>
      </div>

      <!-- Stats Cards -->
      <div class="stats-grid">
        <div class="stat-card">
          <div class="stat-header">
            <span class="stat-label">Total Income</span>
            <div class="stat-icon income">
              <i class="fas fa-arrow-down"></i>
            </div>
          </div>
          <div class="stat-value amount-positive">â‚¹<%= totals.income %></div>
          <div class="stat-change">Money received</div>
        </div>

        <div class="stat-card">
          <div class="stat-header">
            <span class="stat-label">Total Expense</span>
            <div class="stat-icon expense">
              <i class="fas fa-arrow-up"></i>
            </div>
          </div>
          <div class="stat-value amount-negative">â‚¹<%= totals.expense %></div>
          <div class="stat-change">Money spent</div>
        </div>

        <div class="stat-card">
          <div class="stat-header">
            <span class="stat-label">Balance</span>
            <div class="stat-icon balance">
              <i class="fas fa-wallet"></i>
            </div>
          </div>
          <div class="stat-value" style="color: <%= parseFloat(totals.balance) >= 0 ? 'var(--success-color)' : 'var(--danger-color)' %>">
            â‚¹<%= totals.balance %>
          </div>
          <div class="stat-change">Current balance</div>
        </div>

        <div class="stat-card">
          <div class="stat-header">
            <span class="stat-label">Receivable</span>
            <div class="stat-icon receivable">
              <i class="fas fa-hand-holding-usd"></i>
            </div>
          </div>
          <div class="stat-value amount-positive">â‚¹<%= totals.receivable %></div>
          <div class="stat-change">Money to receive</div>
        </div>

        <div class="stat-card">
          <div class="stat-header">
            <span class="stat-label">Payable</span>
            <div class="stat-icon payable">
              <i class="fas fa-credit-card"></i>
            </div>
          </div>
          <div class="stat-value amount-negative">â‚¹<%= totals.payable %></div>
          <div class="stat-change">Money to pay</div>
        </div>
      </div>

      <!-- Transactions Section -->
      <div class="transactions-section">
        <div class="section-header">
          <h2><i class="fas fa-list"></i> Recent Transactions</h2>
        </div>

        <% if (transactions && transactions.length > 0) { %>
          <div style="overflow-x: auto;">
            <table class="transactions-table">
              <thead>
                <tr>
                  <th>Date</th>
                  <th>Description</th>
                  <th>Transfer To</th>
                  <th>Type</th>
                  <th>Amount</th>
                </tr>
              </thead>
              <tbody>
                <% transactions.forEach(transaction => { %>
                  <tr>
                    <td>
                      <%= new Date(transaction.created_at).toLocaleDateString('en-US', { 
                        year: 'numeric', 
                        month: 'short', 
                        day: 'numeric' 
                      }) %>
                    </td>
                    <td><strong><%= transaction.description %></strong></td>
                    <td><%= transaction.transfer_to || 'N/A' %></td>
                    <td>
                      <span class="type-badge <%= transaction.type %>">
                        <%= transaction.type %>
                      </span>
                    </td>
                    <td class="<%= transaction.type === 'income' || transaction.type === 'receivable' ? 'amount-positive' : 'amount-negative' %>">
                      <%= transaction.type === 'income' || transaction.type === 'receivable' ? '+' : '-' %>â‚¹<%= parseFloat(transaction.amount_rs).toFixed(2) %>
                    </td>
                  </tr>
                <% }); %>
              </tbody>
            </table>
          </div>
        <% } else { %>
          <div class="empty-state">
            <i class="fas fa-inbox"></i>
            <p>No transactions yet. Start tracking your expenses!</p>
            <a href="/add-expense" class="btn btn-success mt-4">
              <i class="fas fa-plus"></i> Add Your First Expense
            </a>
          </div>
        <% } %>
      </div>
    </div>

    <!-- Quick Add Transaction Modal -->
    <div id="addModal" class="modal-overlay" style="display: none;">
      <div class="modal-content">
        <div class="modal-header">
          <h2><i class="fas fa-plus-circle"></i> Quick Add Transaction</h2>
          <button class="modal-close" onclick="closeAddModal()">
            <i class="fas fa-times"></i>
          </button>
        </div>
        <form action="/add-expense" method="POST" id="quickAddForm">
          <div class="form-group">
            <label for="quick-type">Transaction Type</label>
            <div class="type-selector">
              <div class="type-option">
                <input type="radio" id="quick-type-income" name="type" value="income" required>
                <label for="quick-type-income">Income</label>
              </div>
              <div class="type-option">
                <input type="radio" id="quick-type-expense" name="type" value="expense" required>
                <label for="quick-type-expense">Expense</label>
              </div>
              <div class="type-option">
                <input type="radio" id="quick-type-receivable" name="type" value="receivable" required>
                <label for="quick-type-receivable">Receivable</label>
              </div>
              <div class="type-option">
                <input type="radio" id="quick-type-payable" name="type" value="payable" required>
                <label for="quick-type-payable">Payable</label>
              </div>
            </div>
          </div>

          <div class="form-group">
            <label for="quick-expenseDate">Date</label>
            <input 
              type="date" 
              id="quick-expenseDate" 
              name="expenseDate" 
              class="form-control" 
              value="<%= new Date().toISOString().split('T')[0] %>"
              required 
            />
          </div>

          <div class="form-group">
            <label for="quick-description">Description</label>
            <input
              type="text"
              id="quick-description"
              name="description"
              class="form-control"
              placeholder="e.g., Coffee, Groceries, Salary"
              required
            />
          </div>

          <div class="form-group">
            <label for="quick-transfer_to">Transfer To/From</label>
            <input
              type="text"
              id="quick-transfer_to"
              name="transfer_to"
              class="form-control"
              placeholder="e.g., John Doe, Company"
              required
            />
          </div>

          <div class="form-group">
            <label for="quick-amount">Amount (â‚¹)</label>
            <input
              type="number"
              id="quick-amount"
              name="amount"
              class="form-control"
              step="0.01"
              min="0.01"
              placeholder="0.00"
              required
            />
          </div>

          <div style="display: flex; gap: 1rem; margin-top: 1.5rem;">
            <button type="submit" class="btn btn-success btn-block">
              <i class="fas fa-check"></i> Add Transaction
            </button>
            <button type="button" onclick="closeAddModal()" class="btn btn-secondary btn-block" style="background: var(--dark-card); color: var(--text-secondary); border: 1px solid var(--dark-border);">
              <i class="fas fa-times"></i> Cancel
            </button>
          </div>
        </form>
      </div>
    </div>

    <script>
      function openAddModal() {
        document.getElementById('addModal').style.display = 'flex';
        document.body.style.overflow = 'hidden';
      }

      function closeAddModal() {
        document.getElementById('addModal').style.display = 'none';
        document.body.style.overflow = 'auto';
        document.getElementById('quickAddForm').reset();
      }

      // Close modal when clicking outside
      document.getElementById('addModal').addEventListener('click', function(e) {
        if (e.target === this) {
          closeAddModal();
        }
      });

      // Close modal with Escape key
      document.addEventListener('keydown', function(e) {
        if (e.key === 'Escape') {
          closeAddModal();
        }
      });
    </script>

    <%- include('partials/footer') %>
  </body>
</html>
