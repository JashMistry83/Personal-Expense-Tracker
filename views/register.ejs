<%- include('partials/header') %>

<div class="auth-container mt-5">
  <div class="auth-card shadow-lg">
    <h2 class="auth-title mb-4">Register</h2>

    <form action="/register" method="POST">

      <div class="form-group">
        <label>Name</label>
        <input type="text" class="form-control custom-input" name="name">
      </div>

      <div class="form-group">
        <label>Email</label>
        <input type="email" class="form-control custom-input" name="username">
      </div>

      <div class="form-group">
        <label>Password</label>
        <input type="password" class="form-control custom-input" name="password">
      </div>

      <div class="form-group">
        <label>Phone Number</label>
        <input type="number" class="form-control custom-input" name="phno">
      </div>

      <button type="submit" class="btn btn-primary btn-auth">Register</button>

    </form>

    <hr>

    <a class="btn btn-google btn-block mt-3" href="/auth/google">
      <i class="fab fa-google mr-2"></i>Sign up with Google
    </a>
  </div>
</div>

<%- include('partials/footer') %>
